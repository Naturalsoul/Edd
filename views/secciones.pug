extends ./_layout

block content
    #ingresarseccion.formcontent
        .container
            .row
                .col-md-12
                    h2.text-center Secciónes
            .row
                .col-md-12
                    form#form-seccion
                        .row
                            .col-md-6
                                .form-group
                                    label(for="codigoseccion") Código
                                    input.form-control#codigoseccion(type="text", placeholder="Ingrese el código de la Sección", name="codigoseccion")
                            .col-md-6
                                .form-group
                                    label(for="nombreseccion") Nombre
                                    input.form-control#nombreseccion(type="text", placeholder="Ingrese el nombre de la Sección", name="nombreseccion")
                            .col-md-6
                                .form-group
                                    label(for="semestreseccion") Semestre Actual
                                    select.form-control#semestreseccion(name="semestreseccion")
                                        option(value="0") 1º Semestre
                                        option(value="1") 2º Semestre
                                        option(value="2") 3º Semestre
                                        option(value="3") 4º Semestre
                                        option(value="4") 5º Semestre
                                        option(value="5") 6º Semestre
                                        option(value="6") 7º Semestre
                                        option(value="7") 8º Semestre
                                        option(value="8") 9º Semestre
                            .col-md-6
                                .form-group
                                    label(for="horainicioseccion") Bloque de Inicio Diario
                                    select.form-control#horainicioseccion(name="horainicioseccion")
                                        option(value="8:30 - 9:15") 8:30 - 9:15
                                        option(value="9:15 - 10:00") 9:15 - 10:00
                                        option(value="10:05 - 10:50") 10:05 - 10:50
                                        option(value="10:50 - 11:35") 10:50 - 11:35
                                        option(value="11:40 - 12:25") 11:40 - 12:35
                                        option(value="12:25 - 13:10") 12:25 - 13:10
                                        option(value="13:45 - 14:30") 13:45 - 14:30
                                        option(value="14:30 - 15:15") 14:30 - 15:15
                                        option(value="15:20 - 16:05") 15:20 - 16:05
                                        option(value="16:05 - 16:50") 16:05 - 16:50
                                        option(value="16:55 - 17:40") 16:55 - 17:40
                                        option(value="17:40 - 18:25") 17:40 - 18:25
                                        option(value="18:30 - 19:15") 18:30 - 19:15
                                        option(value="19:15 - 20:00") 19:15 - 20:00
                                        option(value="20:05 - 20:50") 20:05 - 20:50
                                        option(value="20:50 - 21:35") 20:50 - 21:35
                                        option(value="21:40 - 22:25") 21:40 - 22:25
                                        option(value="22:25 - 23:10") 22:25 - 23:10
                            .col-md-6
                                .form-group
                                    label(for="horaterminoseccion") Bloque de Termino Diario
                                    select.form-control#horaterminoseccion(name="horaterminoseccion")
                                        option(value="8:30 - 9:15") 8:30 - 9:15
                                        option(value="9:15 - 10:00") 9:15 - 10:00
                                        option(value="10:05 - 10:50") 10:05 - 10:50
                                        option(value="10:50 - 11:35") 10:50 - 11:35
                                        option(value="11:40 - 12:25") 11:40 - 12:35
                                        option(value="12:25 - 13:10") 12:25 - 13:10
                                        option(value="13:45 - 14:30") 13:45 - 14:30
                                        option(value="14:30 - 15:15") 14:30 - 15:15
                                        option(value="15:20 - 16:05") 15:20 - 16:05
                                        option(value="16:05 - 16:50") 16:05 - 16:50
                                        option(value="16:55 - 17:40") 16:55 - 17:40
                                        option(value="17:40 - 18:25") 17:40 - 18:25
                                        option(value="18:30 - 19:15") 18:30 - 19:15
                                        option(value="19:15 - 20:00") 19:15 - 20:00
                                        option(value="20:05 - 20:50") 20:05 - 20:50
                                        option(value="20:50 - 21:35") 20:50 - 21:35
                                        option(value="21:40 - 22:25") 21:40 - 22:25
                                        option(value="22:25 - 23:10") 22:25 - 23:10
                            .col-md-6
                                .form-group
                                    label(for="cursoseccion") Curso
                                    select.form-control#cursoseccion(name="cursoseccion")
                            .col-md-6
                                .form-group
                                    label(for="carreraseccion") Carrera
                                    select.form-control#carreraseccion(name="carreraseccion")
                            .col-md-6
                                .form-group
                                    label(for="mayaseccion") Malla
                                    select.form-control#mayaseccion(name="mayaseccion")
                        .row
                            .col-md-12
                                .form-group#btnupdateinsertseccion
                                    button.btn.btn-default#btningresarseccion(type="button") Ingresar Sección
                                    
    #mostrarseccion.tablecontent
        .container
            .row
                .col-md-12
                    h2.text-center Listado de Secciones
            .row
                .col-md-12
                    .table-responsive
                        table.table
                            thead
                                tr
                                    th Código
                                    th Nombre
                                    th Semestre
                                    th Hora de Inicio Diaria
                                    th Hora de Termino Diaria
                                    th Curso
                                    th Carrera
                                    th Malla
                                    th Acciones
                            tbody#tablesecciones

block scripts
    script(type="text/javascript", src="/js/secciones.js")